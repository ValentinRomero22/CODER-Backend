{{> header}}
<div id="products__container" class="products__container">
</div>
<div class="main__container main__container--chat">
    <div class="container">
        <h2>Chat</h2>
        <div class="chat_container">
            <form onsubmit="return sendMessage()">
                <input type="email" name="user" id="user" placeholder="Email" value="valentin@coder.com" required>
                <input type="text" name="name" id="name" placeholder="Nombre" value="valentin" required>
                <input type="text" name="surname" id="surname" placeholder="Apellido" value="romero" required>
                <input type="text" name="alias" id="alias" placeholder="Alias" value="vale" required>
                <input type="text" name="age" id="age" placeholder="Edad" value="27" required>
                <input type="text" name="avatar" id="avatar" placeholder="Avatar" value="imagendeavatar" required>
                <div class="chat__message__box">
                    <input class="chat__message" type="text" name="text" id="text" value="holis" placeholder="Mensaje">
                    <input type="submit" value="Enviar">
                </div>
            </form>
            <div class="chat__box" id="chat"></div>
        </div>
        <p id="compression_status" class="compression_status">Compression</p>
    </div>
</div>
{{> footer}}