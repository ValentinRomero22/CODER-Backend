{{> header}}
<div class="main__container">
    <div class="container form--container">
        <h2>Nuevo producto</h2>
        <form onsubmit="return saveProduct()">
            <input type="text" name="title" id="title" placeholder="Title" required>
            <input type="number" step="any" name="price" id="price" placeholder="Price" required>
            <input type="text" name="thumbnail" id="thumbnail" placeholder="Thumbnail" required>
            <input type="submit" value="Guardar">
        </form>
    </div>
    <div class="container chat--container">
        <h2>Chat</h2>
        <form onsubmit="return sendMessage()">
            <input type="email" name="email" id="email" placeholder="Email" value="valentin@coder.com" required>
            <div class="chat__box" id="chat"></div>
            <div class="chat__message__box">
                <input class="chat__message" type="text" name="message" id="message" placeholder="Mensaje" />
                <input type="submit" value="Enviar">
            </div>
        </form>
    </div>
</div>
<div id="products__container" class="products__container">
</div>
{{> footer}}