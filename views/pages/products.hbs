{{> header}}

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

<div class="main__container">
    <div class="catalog__container">
        {{#if products}}
        <div class="catalog__header">
            <h2 class="products__message">Productos</h2>
            {{!-- {{#if user.isAdmin}} --}}
            <a href="/newProduct" class="button button--detail button--new--product">Agregar producto</a>
            {{!-- {{/if}} --}}
        </div>
        <p id="mensaje"></p>
        <div class="catalog">
            {{!-- {{#if user.isAdmin}} --}}
            {{#each products}}
            <div class="product">
                <img src="{{this.image}}" alt="{{this.name}}" />
                <div class="product__name__container">
                    <p>{{this.name}}</p>
                </div>
                <div class="product__price__container">
                    <p>$ {{this.price}}</p>
                </div>
                {{!-- <button name="btnAgregar" onclick="addToCart(`{{this.id}}`)" class="button button--detail">
                    Agregar al carrito
                </button> --}}
                <button name="btnEditar" onclick="formProduct(`{{this._id}}`)" class="button button--change">
                    Editar
                </button>
                <button name="btnEliminar" onclick="deleteProduct(`{{this._id}}`)" class="button button--delete">
                    Eliminar
                </button>
            </div>
            {{/each}}
            {{!-- {{else}}
            {{#each products}}
            <div class="product">
                <img src="{{this.image}}" alt="{{this.name}}" />
                <div class="product__name__container">
                    <p>{{this.name}}</p>
                </div>
                <div class="product__price__container">
                    <p>$ {{this.price}}</p>
                </div>
                <button name="btnAgregar" onclick="addToCart(`{{this._id}}`)" class="button button--detail">
                    Agregar al carrito
                </button>
            </div>
            {{/each}}
            {{/if}} --}}
        </div>
        {{else}}
        <div class="catalog__header">
            <h2 class="products__message">No hay productos!</h2>
            {{!-- {{#if user.isAdmin}} --}}
            <a href="/product">Agregar producto</a>
            {{!-- {{/if}} --}}
        </div>
        {{/if}}
    </div>
</div>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

{{> footer}}